<div class="container">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <% if @task.completed %>
  <i class="fa fa-check-square-o"></i> This task is completed
  <% else %>
    <i class="fa fa-square-o"></i> This task is not completed yet
  <% end %>
  <div class="pt-3">
    <%= link_to 'Back to List', tasks_path %>
  </div>
    <div class="pt-3">
    <%= link_to 'Edit Task', edit_task_path %>
  </div>
</div>