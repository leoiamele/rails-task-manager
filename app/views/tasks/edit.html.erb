<div class="container">
  <h1>Edit task</h1>
  <%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title, "TÃ­tulo" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details, "Detalles" %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>

  <% unless f.object.new_record? %>
    <div class="checkbox">
      <label>
        <%= f.check_box :completed %> Completado
      </label>
    </div>
  <% end %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
<div class="mt-3">
  <%= link_to 'Back to tasks', tasks_path %>
</div>


</div>